<div class="container">
  <div class="title">
    <h1>Todos os Funcionários</h1>
    <div> 
      <a href="/users" class="btn"><i class="bi bi-house"></i>  Home</a>
      <a href="/users/add" class="btn">
        <i class="bi bi-plus-square"></i> Adicionar Funcionário
      </a>
    </div>
  </div>

  <div class="container text-center info-title">
    <div class="row">
      <div class="col">
        Nome
      </div>
      <div class="col">
        Função
      </div>
      <div class="col">
        Salário
      </div>
      <div class="col">
        Editar
      </div>
      <div class="col">
        Excluir
      </div>
    </div>
  </div>

  <ul class="usuarios">
    {{#each users}}
      <li>
        <div class="container text-center">
          <div class="row">
            <div class="col">
              <label for="">{{this.nome}}</label>
            </div>
            <div class="col">
              <label for="">{{this.funcao}}</label>
            </div>
            <div class="col">
              <label for="">{{this.salario}}</label>
            </div>
            <div class="col">
              <a href="/users/edit/{{this.id}}">
                <i class="bi bi-pencil"></i>
              </a>
            </div>
            <div class="col">
              <form action="/users/remove" method="post">
                <input type="hidden" name="id" value="{{this.id}}">
                <button type="submit">
                  <i class="bi bi-trash3"></i>
                </button>
              </form>
            </div>
          </div>
        </div>
      </li>
    {{/each}}
  </ul>

</div>